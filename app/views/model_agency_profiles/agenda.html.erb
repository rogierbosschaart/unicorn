<div class="mobile-container"> <%=  %>
  <div class="navbar-top-container">
    <%= render "shared/navbar_top" %>
  </div>
  <h1 class="mobile-header">Calendar</h1>
  <div class="mobile-content">
    <%= month_calendar(events: @listings, attribute: :start_date) do |date, listings| %>
      <div class="calendar-day <%= 'has-listings' if listings.any? %>">
        <%= link_to listings_for_date_path(date: date), data: { turbo_frame: :listing_details }, class: "calendar-date-button" do %>
          <strong>
            <%= date.day %>
            <% if listings.any? %>
              <span class="calendar-type p-x-bold">*</span>
            <% end %>
          </strong>
        <% end %>
      </div>
    <% end %>
  </div>

  <div>
    <%= turbo_frame_tag :listing_details do %>
      <h2> </h2>
    <% end %>
  </div>

  <div class="navbar-bottom-container">
      <div class="navbar-bottom">
        <%= render 'shared/mobile-app-navbar' %>
      </div>
    </div>
</div>
