<h1>All</h1>
<div>
 <div class="connections-container">
  <div class="avatar">
  </div>
  <div class="connections-info">
   <% @connections.each do |connection| %>
     <div class="card d-flex justify-content-between align-items-start">
       <span> <%= connection.listing.listing_type %> </span>
       <span> <%= connection.listing.client.name %> </span>
       <span> <%= connection.listing.address %> </span>
     </div>
   <% end %>
  </div>
 </div>
</div>

<h1>Castings</h1>
<% @castings.each do |casting| %>
 <div class="m-0 connections-container">
    <div class="avatar">
    </div>
    <div class="connections-info">
        <span class="small-type"> <%= casting.listing.listing_type %> </span>
        <span class="p-standard"> <%= casting.listing.client.name %> </span>
        <span class="p-standard"> <%= casting.listing.start_date %> </span>
        <span class="p-standard"> <%= casting.listing.start_time.strftime('%H:%M') %> - <%= casting.listing.end_time.strftime('%H:%M') %>  </span>
    </div>
 </div>
<% end %>

<h1>Options</h1>
<% @options.each do |option| %>
 <div class="m-0 connections-container">
    <div class="avatar">
    </div>
    <div class="connections-info">
       <span class="small-type"> <%= option.listing.listing_type %> </span>
       <span class="p-standard"> <%= option.listing.client.name %> </span>
       <span class="p-standard"> <%= option.listing.start_date %> - <%= option.listing.end_date %> </span>
    </div>
 </div>
<% end %>

<h1>Jobs</h1>
<div class="m-0">
 <div class="connections-container">
  <div class="avatar">
  </div>
  <div class="connactions-info">
   <% @jobs.each do |job| %>
     <div class="card d-flex justify-content-between align-items-start">
       <span> <%= job.listing.listing_type %> </span>
       <span> <%= job.listing.client.name %> </span>
       <span> <%= job.listing.start_date %> </span>
       <span> <%= job.listing.end_date %> </span>
     </div>
    <% end %>
  </div>
 </div>
</div>
