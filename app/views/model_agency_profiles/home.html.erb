<div class="mobile-container <%= @agency.name %>">
  <div class="navbar-top-container">
    <%= render "shared/navbar_top" %>
  </div>
  <div class="home-posts-container">
    <% @posts.each do |post| %>
      <div class="connection-header">
        <%= image_tag "#{post.agency.profile_pic}", class: "avatar avatar-connection-show", alt: "dropdown menu", crop: :cover %>
        <div class="connection-agency-info">
          <span class="p-standard"><%= post.agency.name %></span>
          <span class="small-type"><%= post.agency.city %></span>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <div class="post-card">
          <% if post.photo.attached? %>
            <%= cl_image_tag post.photo.key, class: "post-image" %>
          <% end %>
          <span class="p-regular"> <%= post.post_text %> </span>
        </div>
      </div>
    <% end %>
  </div>
  <div class="navbar-bottom-container">
    <div class="navbar-bottom">
      <%= render 'shared/mobile-app-navbar' %>
    </div>
  </div>
</div>
