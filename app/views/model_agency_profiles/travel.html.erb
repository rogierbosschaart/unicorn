<div class="mobile-container <%= @agency.name %>">
  <div class="navbar-top-container">
    <%= render "shared/navbar_top" %>
  </div>

  <%# HEADER // ALWAYS THE SAME %>
  <div class="connection-header">
    <%= image_tag "#{current_user.model_agency_profiles.find_by(active: true).try(:agency).try(:profile_pic)}", class: "avatar avatar-connection-show", alt: "dropdown menu", crop: :cover %>
    <div class="connection-agency-info">
      <span class="p-standard"><%= @agency.name %></span>
      <span class="small-type"><%= @agency.city %></span>
    </div>
  </div>

  <div class="mobile-content">
    <% @hotels.each do |hotel| %>
        <div class="travel-card">
          <div class="travel-header">
            <h1 class="centered">Hotel</h1>
          </div>
          <div class="travel-layout">
            <div class="travel-icon">
              <i class="fa-solid fa-hotel"></i>
            </div>
            <div class="travel-info">
              <div class="d-flex">
                <span class="p-light p-description">Hotel</span>
                <span class="p-regular info"><%= hotel.name %></span>
              </div>
              <div class="d-flex">
                <span class="p-light p-description">Address</span>
                <span class="p-regular info"><%= hotel.address %></span>
              </div>
              <div class="d-flex">
                <span class="p-light p-description">Check-in</span>
                <span class="p-regular info"><%= hotel.checkin %></span>
              </div>
              <div class="d-flex">
                <span class="p-light p-description">Check-out</span>
                <span class="p-regular info"><%= hotel.checkout %></span>
              </div>
              <div class="d-flex">
                <span class="p-light p-description">Info</span>
                <span class="p-regular info"><%= hotel.extra_info %></span>
              </div>
            </div>
          </div>
        </div>
    <% end %>

    <% @travels.each do |travel| %>
        <div class="travel-card">
          <div class="travel-header">
            <h1 class="centered">Travel</h1>
          </div>
          <div class="travel-layout">
            <div class="travel-icon">
              <i class="fa-solid fa-plane"></i>
            </div>
            <div class="travel-info">
              <div class="d-flex">
                <span class="p-light p-description">From</span>
                <span class="p-regular"><%= travel.origin %></span>
              </div>
              <div class="d-flex">
                <span class="p-light p-description">To</span>
                <span class="p-regular"><%= travel.destination %></span>
              </div>
              <div class="d-flex">
                <span class="p-light p-description">Date</span>
                <span class="p-regular"><%= travel.date.strftime('%-d %B %Y') %></span>
              </div>
              <div class="d-flex">
                <span class="p-light p-description">Time</span>
                <span class="p-regular"><%= travel.time.strftime('%H:%M') %></span>
              </div>
              <div class="d-flex">
                <span class="p-light p-description">Info</span>
                <span class="p-regular"><%= travel.extra_info %></span>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    <div class="filler"></div>
  </div>

  <div class="navbar-bottom-container">
    <div class="navbar-bottom">
      <%= render 'shared/mobile-app-navbar' %>
    </div>
  </div>
</div>
