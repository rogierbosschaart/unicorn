<h1>Agenda</h1>

<div class="mb-3" data-controller="calendar">
  <label for="calendar-jump" class="form-label">Jump to Date:</label>
  <input type="date" id="calendar-jump" class="form-control" />
</div>

<%= month_calendar(class: "big-calendar", params: { month: params[:month] }) do |date| %>
  <div>
    <strong><%= date.day %></strong>
    <% (@listings_by_date[date] || []).each do |listing| %>
      <div>
        <%= listing.listing_type %><br>
        <%= listing.start_time&.strftime("%H:%M") %> - <%= listing.end_time&.strftime("%H:%M") %><br>
        <%= listing.extra_info %>
      </div>
    <% end %>
  </div>
<% end %>
