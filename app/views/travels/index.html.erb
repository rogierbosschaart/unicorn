<%# app/views/travels/index.html.erb %>

<div class="container my-4">
  <h1>Travels and Hotels</h1>

  <div class="row">
    <div class="col-md-6">
      <h2>Travels</h2>
      <% if @travels.any? %>
        <ul class="list-group">
          <% @travels.each do |travel| %>
            <li class="list-group-item">
              <%= link_to "Travel to #{travel.destination} (#{travel.start_date.strftime('%Y-%m-%d')} - #{travel.end_date.strftime('%Y-%m-%d')})", travel_path(travel) %>
              <%# travel_path(travel) предполагает, что у вас есть маршрут :show для travel %>
              <%# Если у вас есть associations, можете добавить: %>
              <%# <br><small>For: <%= travel.model.first_name %> <%= travel.model.last_name %></small> %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No travels found yet.</p>
      <% end %>
      <%= link_to 'Add New Travel', new_travel_path, class: 'btn btn-primary mt-3' %>
      <%# new_travel_path предполагает, что у вас есть маршрут :new для travel %>
    </div>

    <div class="col-md-6">
      <h2>Hotels</h2>
      <% if @hotels.any? %>
        <ul class="list-group">
          <% @hotels.each do |hotel| %>
            <li class="list-group-item">
              <%= link_to "#{hotel.name} in #{hotel.city}", hotel_path(hotel) %>
              <%# hotel_path(hotel) предполагает, что у вас есть маршрут :show для hotel %>
              <%# Если у вас есть associations, можете добавить: %>
              <%# <br><small>Booked for: <%= hotel.model.first_name %> <%= hotel.model.last_name %></small> %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No hotels found yet.</p>
      <% end %>
      <%= link_to 'Add New Hotel', new_hotel_path, class: 'btn btn-primary mt-3' %>
      <%# new_hotel_path предполагает, что у вас есть маршрут :new для hotel %>
    </div>
  </div>
</div>