<div class="connection-show-container">
  <%# HEADER %>
  <div class="connection-header">
    <div class="avatar avatar-connection-show">
    </div>
    <div class="connection-agency-info">
      <span class="p-standard"><%= @agency.name %></span>
      <span class="small-type"><%= @agency.city %></span>
    </div>
  </div>

  <%# BUTTONS %>
  <div class="connection-show-buttons">
    <%= link_to inbox_path do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>
    <div class="accept-button">
      <div class="check-button"></div>
      <span class="x-small-type">accept</span>
    </div>
  </div>

  <%# MAIN CONTENT %>
  <div class="connection-main-content">
    <h1>
      <%= @connection.listing.start_date.strftime('%-d %B') %> - <%= @connection.listing.end_date.presence&.strftime('%-d %B') %>
    </h1>
    <div class="connection-type-and-date">
      <h2><%= @connection.listing.listing_type %></h2>
      <span class="small-type"><%= @connection.listing.created_at.strftime('%-d %B') %></span>
    </div>
    <hr class="mb-2">
    <div class="d-flex">
      <span class="p-light p-description">Client</span>
      <span class="p-regular"><%= @connection.listing.client.name %></span>
    </div>
    <div class="d-flex">
      <span class="p-light p-description">Location</span>
      <span class="p-regular"><%= @connection.listing.location %></span>
    </div>
    <div class="d-flex">
      <span class="p-light p-description">Agent</span>
      <span class="p-regular"><%= @connection.listing.user.f_name%></span>
    </div>
    <div class="d-flex">
      <span class="p-light p-description">Rate</span>
      <span class="p-regular">â‚¬ <%= @connection.rate%></span>
    </div>
    <div class="d-flex">
      <span class="p-light p-description">Info</span>
      <span class="p-regular"><%= @connection.listing.extra_info%></span>
    </div>
    <hr class="mt-4">
  </div>
</div>

<%= form_with(model: [@connection, ConnectionComment.new], local: true) do |f| %>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, rows: 3 %>
  </div>
  <div class="actions">
    <%= f.submit "Post Comment" %>
  </div>
<% end %>

<%= render 'shared/mobile-app-navbar' %>
